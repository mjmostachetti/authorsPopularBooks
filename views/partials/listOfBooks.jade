.container
  .row
    .col-md-12.text-center
      h1 Author Data Analysis
      form.text-center
        input#searchAuthor(ng-keyup="onKeyUp($event)")
        input(type='button' value="Click Here" ng-click='search()')
  .row
    .col-md-6.text-center
      h2!='Author : {{ authorObj.name[0] }}'
      .row
        .col-md-12
          img#mainAuthorPic(ng-src='{{ authorPic }}')
    .col-md-6.text-center
      h3#bookTitle!='{{ title }}'
      .row
        .col-md-12#descDiv
          p#bookDesc!='{{ bookDesc }}'
  .row
    #svgDocker.col-md-12.text-center
  .row(ng-repeat='group in influencesToAuthor')
    .col-md-3.text-center
      img(ng-src="{{group[0].image_url[0]}}")
      p='{{ group[0].name[0] }}'
    .col-md-3.text-center
      img(ng-src="{{group[1].image_url[0]}}")
      p='{{ group[1].name[0] }}'
    .col-md-3.text-center
      img(ng-src="{{group[2].image_url[0]}}")
      p='{{ group[2].name[0] }}'
    .col-md-3.text-center
      img(ng-src="{{group[3].image_url[0]}}")
      p='{{ group[3].name[0] }}'


    


